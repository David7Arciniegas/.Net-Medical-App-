<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search</title>
    <!-- Link to the stylesheet -->
    <link rel="stylesheet" type="text/css" href="~/style.css" />
</head>
<body>
    <div class="container">
        <h1 class="search-title">We provide the best health services</h1>
        <p class="sub-title">You can search for a specific Doctor or a Clinic below:</p>

        <!-- Search form -->
        <form asp-action="Search" asp-controller="Search" method="post">
            <!-- Doctor or Clinic name input -->
            <div class="form-group">
                <label for="DoctorOrClinicName">Doctor or Clinic Name:</label>
                <input id="DoctorOrClinicName" name="DoctorOrClinicName" value="@Model.DoctorOrClinicName" />
            </div>

            <!-- City input -->
            <div class="form-group">
                <label for="City">City:</label>
                <input id="City" name="City" value="@Model.City" />
            </div>

            <!-- Search button -->
            <button type="submit">Search</button>
        </form>

        <!-- If search results are available, show them in a table -->
        @if (Model.Results != null)
        {
            <h2 class="results">Results:</h2>
         <table class="table">
  <thead>
    <tr>
      <th class="table-header">Name</th>
      <th class="table-header">City</th>
    </tr>
  </thead>
  <tbody>
    <!-- Loop through each result and display their name and city in a table row -->
    @foreach (var result in Model.Results)
    {
        <tr class="table-row">
            <td class="table-data">@result.Name</td>
            <td class="table-data">@result.City</td>
        </tr>
    }
  </tbody>
</table>

        }
    </div>
</body>
</html>
